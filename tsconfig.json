
{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2017",
    "lib": ["es2017", "dom"],
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "strict": true,
    "strictNullChecks": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "noEmit": false,
    "outDir": "js"
  },
  "include": [
    "tests",
    "src"
  ],
  "exclude": [
    "node_modules"
  ]
}
